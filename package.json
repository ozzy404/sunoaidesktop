{
  "name": "suno-desktop-player",
  "version": "1.0.0",
  "description": "Lightweight desktop music player for Suno AI",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build:icon": "node scripts/generate-icon.js",
    "build": "npm run build:icon && electron-builder",
    "build:win": "npm run build:icon && electron-builder --win",
    "build:win64": "npm run build:icon && electron-builder --win --x64",
    "build:win32": "npm run build:icon && electron-builder --win --ia32",
    "build:mac": "npm run build:icon && electron-builder --mac",
    "build:linux": "npm run build:icon && electron-builder --linux",
    "publish": "npm run build:icon && electron-builder --win --x64 --ia32 --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ozzy404/sunoaidesktop.git"
  },
  "author": "ozzy404",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.suno.desktop.player",
    "productName": "Suno Desktop Player",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}-${arch}.${ext}"
    },
    "files": [
      "src/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "ozzy404",
      "repo": "sunoaidesktop",
      "releaseType": "release"
    }
  }
}
